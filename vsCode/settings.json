  "editor.cursorBlinking": "solid",
  "editor.fontFamily": "Victor Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "workbench.iconTheme": "material-icon-theme",
  // base
  // "editor.renderWhitespace": "all",
  "editor.minimap.enabled": false,
  "editor.rulers": [
    80,
    120
  ],
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "workbench.colorTheme": "Dark+ with Italics", // category:themes dark-plus-with-italics
  // custom
  "javascript.implicitProjectConfig.experimentalDecorators": true,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.format.insertSpaceAfterConstructor": true,
  "workbench.colorCustomizations": {
    "activityBar.activeBorder": "#fa45d4",
    "activityBarBadge.background": "#fa45d4",
    "activityBarBadge.foreground": "#15202b",
    "titleBar.activeBackground": "#61dafb",
    "titleBar.inactiveBackground": "#61dafb99",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveForeground": "#15202b99",
    "statusBar.background": "#242829",
    "statusBarItem.hoverBackground": "#2fcefa",
    "statusBar.foreground": "#7c9ab8",
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic (=FlottFlott)
          "comment",
          "storage.modifier", //static keyword
          "entity.other.attribute-name"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "meta.function.parameter variable",
        "settings": {
          "fontStyle": "",
          "foreground": "#413f39"
        }
      },
      {
        "scope": "entity.name.type",
        "settings": {
          "foreground": "#48b6d8",
          "fontStyle": "italic bold underline"
        }
      },
      {
        "scope": "keyword.operator.new",
        "settings": {
          "foreground": "#9C78DE",
          "fontStyle": "italic"
        }
      },
    ],
    "keywords": "#9C78DE",
    "functions": "#58C1FF",
    "variables": "#94B1BB",
    "numbers": "#50D1F1",
    "strings": "#50C58F",
  },
  "editor.formatOnPaste": true,
  "javascript.preferences.quoteStyle": "double",
  "material-icon-theme.folders.theme": "none",
}
